config CONFIG_SPI_MEM
	bool "SPI memory extension"
	default y
	help
	  Enable this option if you want to enable the SPI memory extension.
	  This extension is meant to simplify interaction with SPI memories
	  by providing a high-level interface to send memory-like commands.

comment "SPI Master Controller Drivers"

config CONFIG_HC_SPI_SF
	bool "HC SPI SF Controller"
	help
	  This is the driver for the SPI Controller.

config CONFIG_HC_SPI_MASTER
	bool "HC SPI Master Controller"
	help
	  This is the driver for the SPI master Controller.

config CONFIG_HC_GPIO_SPI
	bool "HC GPIO SPI Controller"
	help
	  This is the driver for the gpio SPI Controller.

comment "SPI Protocol Masters"
config CONFIG_SPI_SPIDEV
	bool "User mode SPI device driver support"
	help
	  This supports user mode SPI protocol drivers.
