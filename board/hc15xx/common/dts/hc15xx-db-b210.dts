				h-total-len = <1026>;
				v-total-len = <525>;

				h-active-len = <800>;
				v-active-len = <480>;

				h-front-len = <210>;
				h-sync-len = <6>;
				h-back-len = <10>;

				v-front-len = <22>;
				v-sync-len = <3>;
				v-back-len = <20>;
				/* bool type, 0 or 1*/
				h-sync-level = <0>;
				/* bool type, 0 or 1*/
				v-sync-level = <0>;
				frame-rate = <50000>;
			};
		};
	};
};
